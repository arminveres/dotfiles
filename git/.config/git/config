[user]
	name = Armin Veres
[core]
	autocrlf = input
	editor = nvim
	whitespace = trailing-space
	excludesfile = ~/.config/git/gitignore
[credential]
	helper = store
[init]
	defaultBranch = main
[color]
	ui = auto
[merge]
	tool = "nvim"
	prompt = false
[mergetool]
	keepBackup = false
[mergetool "nvim"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	rebase = true
[rebase]
	autoStash = true
[push]
	autoSetupRemote = true
[diff]
	external = difft --display inline
[alias]
	tree = log --oneline --graph --decorate --branches #--max-count 10
[commit]
	gpgsign = true
