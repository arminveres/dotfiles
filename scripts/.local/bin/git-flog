#! /bin/env bash
set e

# Taken from https://github.com/shervinsahba/scripts

git log --pretty="format:* %C(yellow)%h%Creset - %as - %s" --color |
	fzf --ansi --prompt="Search > " --preview \
		"git show --stat --color --pretty=\"%C(yellow)Commit: %H%Creset%nParent: %C(green)%P%Creset%nAuthor: %C(white)%an%Creset <%ce>%nTime: %ah\" -p {2}" |
	cut -f2 -d " "
